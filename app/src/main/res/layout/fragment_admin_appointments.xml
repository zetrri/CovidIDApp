<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthAdmin.AdminAppointmentsFragment">

        <ScrollView
            android:padding="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sortera efter: " />
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/text_county"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.3"
                            android:text="LÃ¤n" />

                        <Spinner
                            android:id="@+id/dropdown_county"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:spinnerMode="dropdown" />

                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/text_city"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.3"
                            android:text="Stad" />

                        <Spinner
                            android:id="@+id/dropdown_city"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:spinnerMode="dropdown" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/text_clinic"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.3"
                            android:text="Klinik" />

                        <Spinner
                            android:id="@+id/dropdown_clinic"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:spinnerMode="dropdown" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/text_vaccine"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.3"
                            android:text="Vaccin" />

                        <Spinner
                            android:id="@+id/dropdown_vaccine"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:spinnerMode="dropdown" />
                    </TableRow>


                </TableLayout>
                <LinearLayout
                    android:id="@+id/containerbookings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

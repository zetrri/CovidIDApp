<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.ActivityDosesAgeProduct">

    <TextView
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:id="@+id/TextSpinnerAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:id="@+id/spinnerAgeInDashProductAndAge"
        app:layout_constraintStart_toEndOf="@id/TextSpinnerAge"
        app:layout_constraintTop_toTopOf="parent">

    </Spinner>

    <TextView
        android:id="@+id/TextforProductPinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:text="Product: "
        app:layout_constraintStart_toEndOf="@id/spinnerAgeInDashProductAndAge"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <Spinner
        android:id="@+id/spinnerProductInDashProductAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product"
        app:layout_constraintStart_toEndOf="@+id/TextforProductPinner"
        app:layout_constraintTop_toTopOf="parent"></Spinner>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerAgeInDashProductAndAge"></ListView>
</androidx.constraintlayout.widget.ConstraintLayout>